<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Button">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/custom_btn</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextLinks">
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="EditText">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">@drawable/inputs</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="GroupDialogStyle" parent="Theme.AppCompat.Light.Dialog"/>


    <!-- chat -->
    <style name="ChatLayoutDisplayChatStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginEnd">2dp</item>
    </style>

    <style name="ChatLayoutSendMsgStyle">
        <item name="android:layout_margin">4dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="ChatLayoutSendMsgInputStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:background">@drawable/inputs</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="ChatLayoutSendMsgBtnStyle">
        <item name="android:background">@drawable/ic_send</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">4dp</item>
    </style>

</resources>
